<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="20.0dip" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/bg_white"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/title"
            style="@style/text_18_ffffff"
            android:layout_width="fill_parent"
            android:layout_height="40.0dip"
            android:gravity="center"
            android:text="title"
            android:background="@mipmap/up_bar"
            android:visibility="visible" />
        <TextView
            android:id="@+id/lv"
            style="@style/text_18_ffffff"
            android:layout_width="fill_parent"
            android:layout_height="120.0dip"
            android:gravity="center"
            android:text="利息：5%"
            android:textColor="@color/text_upbar"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="horizontal">

            <com.example.a111111.diancan.p1
                android:id="@+id/C1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:radius="60"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:circleBackground="#00000000"
                app:ringColor="#50b6ed"
                app:textColor="#50b6ed"
                />
            <com.example.a111111.diancan.p1
                android:id="@+id/C2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:radius="60"
                android:layout_weight="1"
                android:layout_gravity="center"
                app:circleBackground="#00000000"
                app:ringColor="#50b6ed"
                app:textColor="#50b6ed"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:background="@mipmap/set"
            android:gravity="center" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#30c4ed"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/positiveButton"
                    style="@style/text_15_ffffff_sdw"
                    android:layout_width="114.0dip"
                    android:layout_height="40.0dip"
                    android:background="@mipmap/message_unsent"
                    android:gravity="center"
                    android:text="确认" />

                <Button
                    android:id="@+id/negativeButton"
                    style="@style/text_15_666666_sdw"
                    android:layout_width="114.0dip"
                    android:layout_height="40.0dip"
                    android:layout_marginLeft="20.0dip"
                    android:background="@mipmap/message_sent"
                    android:gravity="center"
                    android:text="取消" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</FrameLayout>