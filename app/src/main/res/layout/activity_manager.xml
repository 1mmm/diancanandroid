<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget34"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/wid"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@mipmap/bg_triangles"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@mipmap/first_log_container"
                android:gravity="center_horizontal|center_vertical"
                android:text="管理员，欢迎回来！"
                android:textColor="#37d3da"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cdd"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:background="@mipmap/container_decorations"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <TextView
                android:id="@+id/cd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@mipmap/normal_container"
                android:gravity="center_horizontal|center_vertical"
                android:text="菜单管理"
                android:textColor="#000000"
                android:textColorHint="#37d3da" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/zhh"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="60dp"
            android:background="@mipmap/container_decorations"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
            <TextView
                android:id="@+id/zh"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@mipmap/normal_container"
                android:gravity="center_horizontal|center_vertical"
                android:text="账户管理"
                android:textColor="#000000"
                android:textColorHint="#37d3da" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2.5"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>